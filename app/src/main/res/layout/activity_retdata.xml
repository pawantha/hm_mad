<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Retdata"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_out"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Order summary"
        android:padding="15dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="150dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_out"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="food item category-Friedrice"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/des"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="food item code- 140"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/code"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="credit card_Sampath"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/method"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="Total price- Rs.250.00"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="Conform"
        android:background="@drawable/edit_text"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>